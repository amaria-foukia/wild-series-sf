{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" width="200" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
        <div>
            {% for season in seasons %}
                <a href="{{ path("program_season_show", { slug: program.slug, seasonId: season.id }) }}"><p><b>{{ season.description }}</b> - Année : {{ season.year }}</p></a>
            {% endfor %}
        </div>

        <strong>Acteurs :</strong>

        <ul>
            {% for actor in program.actors %}
                <a href="{{ path("actor_show", { id : actor.id }) }}"><li>{{ actor.name }} </li></a>
            {% else %}
                <li>Aucun acteur pour cette série</li>
            {% endfor %}
        </ul>

    </div>



    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}
